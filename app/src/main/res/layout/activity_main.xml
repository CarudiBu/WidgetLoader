<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/currently_loaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently loaded:" />

    <TextView
        android:id="@+id/currently_loaded_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application launcher" />

    <TextView
        android:id="@+id/currently_loaded_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch supported applications on the cover screen through a button on a widget" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/widget_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings:" />

    <EditText
        android:id="@+id/package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="App package name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>